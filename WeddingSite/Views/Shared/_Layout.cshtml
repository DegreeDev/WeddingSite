@{
	var active = ViewBag.active != null ? ViewBag.active: "";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title - My ASP.NET MVC Application</title>
	<link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
	<meta name="viewport" content="width=device-width" />
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	<link href="~/Content/bootstrap.css" rel="stylesheet" />
	@RenderSection("styles", required: false)
</head>
<body>
	<header>
		<nav class="navbar navbar-default" role="navigation">
			<div class="container-fluid">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header">
					<a href="@Url.Action("Index", "Home")" class="navbar-brand">
						M + N
					</a>
				</div>
				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav">
						<li class="@(active == "proposal" ? "active" : "")">@Html.ActionLink("Proposal", "Ceremony", "Home")</li>
						<li class="@(active == "ceremony" ? "active" : "")">@Html.ActionLink("Ceremony", "Ceremony", "Home")</li>
						<li class="@(active == "reception" ? "active" : "")">@Html.ActionLink("Reception", "Reception", "Home")</li>
						<li class="@(active == "photos" ? "active" : "")">@Html.ActionLink("Photos", "Photos", "Home")</li>
						<li class="@(active == "party" ? "active" : "")">@Html.ActionLink("Wedding Party", "Party", "Home")</li>
						<li class="@(active == "accommodations" ? "active" : "")">@Html.ActionLink("For Guests", "Accommodations", "Home")</li>
						<li class="@(active == "rsvp" ? "active" : "")">@Html.ActionLink("RSVP", "RSVP", "Home")</li>
					</ul>
				</div><!-- /.navbar-collapse -->
			</div><!-- /.container-fluid -->
		</nav>
	</header>

	<div class="clearfix"></div>
	<div class="body">
		<div class="container-fluid">
			@RenderBody()
		</div>
	</div>
	<div id="footer">
		Matthew Lee & Natalya Falk Copyright 2014
	</div>
	@Scripts.Render("~/bundles/jquery")
	@RenderSection("scripts", required: false)
</body>
</html>
